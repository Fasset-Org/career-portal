<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Assets/css/popuo-box.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <script src="~/Assets/js/jquery-2.2.3.min.js"></script>
    <script src="~/Assets/js/jquery.magnific-popup.js"></script>

    <!-- Add jQuery (required for Toastr) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Add Toastr JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @if (TempData["LoginSuccess"] != null)
    {
        <script>
        $(document).ready(function () {
            toastr.success('@TempData["LoginSuccess"]');
        });
        </script>
    }

    @if (TempData["LoginError"] != null)
    {
        <script>
        $(document).ready(function () {
            toastr.error('@TempData["LoginError"]');
        });
        </script>
    }
    @if (TempData["LoginUsernameError"] != null)
    {
        <script>
        $(document).ready(function () {
            toastr.error('@TempData["LoginUsernameError"]');
        });
        </script>
    }
    @if (TempData["LoginPasswordError"] != null)
    {
        <script>
        $(document).ready(function () {
            toastr.error('@TempData["LoginPasswordError"]');
        });
        </script>
    }
</body>
</html>
